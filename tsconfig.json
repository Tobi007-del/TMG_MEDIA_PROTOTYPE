{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/ts/**/*.ts", "src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
